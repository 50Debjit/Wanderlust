<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
    
    <div class="col-8 offset-2">
    <h3>Listing details:</h3>
    
    <div class="listingcard" >
        <img src="<%=listing.image%>" class="card-img-top"  style="width:20rem;" alt="listing">                                                                                                                                                             
        <!-- <div class="card-img-overlay"></div> -->
        <div class="card-body">
          <h3 class="card-title"><%=listing.title%></h3>
          <p ><b><%=listing.title%> <br>
            <%=listing.description%> <br>
            &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.location%><br>    
            <%=listing.country%>
          </b></p> 
        </div>
      </div>
   <div class="col-1 btns">   <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark" >Edit </a> <br><br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"><button class=" btn  btn-dark">Delete</button>
    </form>
</div>
   <hr>
</div>
    <div class="col-8 offset-2">
      <h4>Leave a review</h4>
      <div>
        <form  action="/listings/<%=listing.id%>/reviews" method="POST"  class="mb-3 needs-validation" novalidate class="needs-validation" >
          <label for="rating" class="form-label">Rating</label>
          <input id="rating" min="1" max="5" class="form-range" type="range" name="reviews[rating]">
          <div class="mb-3">
            <label for="comment" class="form-label">Comment here:</label>
      <textarea name="reviews[comment]" id="comment" cols="50" rows="5" class="form-control" required ></textarea>
          </div>
          <button class="btn=solid mb-3 ">Submit</button>
        </form>    
        
      </div>
      <h4>All Reviews</h4>
      <div class="row">
      <%  for(review of listing.review){ %>
        <!-- <li> <%=review.comment%>, <%=review.rating%> Star</li> -->
       
          <div class="card col-5 ms-3 mb-3" >
          <div class="card-body pt-2">
            <h5 class="card-title">Debjit</h5>
            <p class="card-text"><%=review.comment%></p>
            <p  card-text"><%=review.rating%> <img src="https://img.freepik.com/premium-vector/five-stars-customer-product-rating-flat-icon-apps-websites_178156-488.jpg" alt="star"  style=" width: 25px; height: 25px; margin-bottom: 3px;"></p>
          </div>
          <form  action="/listings/<%=listing.id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="mb-3">
            <button class="btn btn-sm btn-dark mt-3">Delete</button>
          </form>
        </div>
      
        <%}%>
      </div>
     
    </div>
   
</div>
</body>
